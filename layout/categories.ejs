<section class="page">
  <ul class="accordion-menu">
    <% site.categories.each(item => { %>
      <li class="has-children">
        <input type="checkbox" name="<%= item.name %>" id="<%= item.name %>" />
        <label for="<%= item.name %>">
          <i class="fas fa-chevron-right"></i>
          <%= item.name %>
        </label>
        <ul class="sub-menu">
          <% item.posts.sort('date', 'desc').each(post => { %>
            <li>
              <%- partial('partials/post/date', { post: post, class_name: 'inline-block text-color-desc', date_format: 'YYYY/MM/DD'}) %>
              <%- partial('partials/post/title', { post: post, index: true, class_name: '' }) %>
            </li>
          <% }) %>
        </ul>
      </li>
    <% }) %>
  </ul>
</section>